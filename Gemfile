# A sample Gemfile
source "https://rubygems.org"

gem 'sinatra'
gem 'thin'
gem 'require_all'
gem 'activerecord', '5.2' #database mapping and association powers
gem 'sinatra-activerecord' #create files and folders, and automate tasks such as database creation
gem 'rake' 


group :development do
	gem 'shotgun'
	gem 'pry'
	gem 'tux' #interactive console that pre-loads our database and ActiveRecord relationships for us
    gem 'sqlite3', '~> 1.3.6'
end